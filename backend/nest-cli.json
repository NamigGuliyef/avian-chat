{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true
  },
  "projects": {
    "auth-gateway": {
      "type": "application",
      "root": "src/auth/api-gateway",
      "entryFile": "main",
      "sourceRoot": "src/auth/api-gateway"
    },
    "auth-service": {
      "type": "application",
      "root": "src/auth/auth-service",
      "entryFile": "main",
      "sourceRoot": "src/auth/auth-service"
    },

    "user-gateway": {
      "type": "application",
      "root": "src/user/api-gateway",
      "entryFile": "main",
      "sourceRoot": "src/user/api-gateway"
    },
    "user-service": {
      "type": "application",
      "root": "src/user/user-service",
      "entryFile": "main",
      "sourceRoot": "src/user/user-service"
    },

    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src"
    }
  }
}
